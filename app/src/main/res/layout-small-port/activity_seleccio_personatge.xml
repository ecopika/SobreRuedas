<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".joc.Vista.activities.seleccioPersonatgeActivity"
    android:background="@drawable/fonspersonatge"
    android:keepScreenOn="true">

    <TextView
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="60dp"
        android:paddingTop="3dp"
        android:paddingLeft="0dp"
        android:id="@+id/textViewNom"
        android:textIsSelectable="false" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="96dp"
            android:layout_height="80dp"
            android:layout_below="@+id/textView"
            android:id="@+id/buttonL"
            android:background="@drawable/botonnubemorada"
            android:onClick="changePageLeft"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:paddingTop="32dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="7dp" />

        <Button
            android:layout_width="96dp"
            android:layout_height="80dp"
            android:id="@+id/buttonPlay"
            android:background="@drawable/blanca"
            android:onClick="bottonPlay"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:paddingTop="32dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="25dp" />

        <Button
            android:layout_width="96dp"
            android:layout_height="80dp"
            android:id="@+id/buttonR"
            android:background="@drawable/botonnubemorada"
            android:onClick="changePageRight"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:paddingTop="32dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="25dp" />

    </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearLayout"
            android:layout_marginTop="125dp"
            android:columnCount="4"
            android:rowCount="3">

            <TextView
                android:layout_columnSpan="2"
                android:layout_width="215dp"
                android:layout_height="92dp"
                android:textSize="17sp"
                android:paddingLeft="50dp"
                android:layout_column="1"
                android:layout_marginTop="10dp"
                android:id="@+id/textView"
                android:paddingTop="30dp" />
            <ImageView
                android:layout_height="260dp"
                android:layout_width="115dp"
                android:layout_columnSpan="1"
                android:layout_rowSpan="2"
                android:layout_marginTop="15dp"
                android:id="@+id/imageView"
                android:layout_gravity="top|bottom" />

            <TextView
                android:layout_marginTop="85dp"
                android:layout_height="207dp"
                android:layout_width="match_parent"
                android:layout_gravity="left"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:layout_row="1"
                android:layout_rowSpan="2"
                android:textSize="15sp"
                android:id="@+id/textView2"/>

        </GridLayout>

</RelativeLayout>
