<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".joc.Vista.activities.seleccioPersonatgeActivity"
    android:background="@drawable/fonspersonatge"
    android:keepScreenOn="true">

    <TextView
        android:layout_width="340dp"
        android:layout_height="169dp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="27dp"
        android:text="Núria"
        android:textSize="101dp"
        android:paddingTop="6dp"
        android:paddingLeft="15dp"
        android:id="@+id/textViewNom"
        android:textIsSelectable="false" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="122dp"
            android:layout_height="106dp"
            android:layout_below="@+id/textView"
            android:id="@+id/buttonL"
            android:background="@drawable/botonnubemorada"
            android:onClick="changePageLeft"
            android:textSize="28sp"
            android:textAllCaps="false"
            android:paddingTop="42dp"
            android:layout_marginLeft="41dp" />

        <Button
            android:layout_width="122dp"
            android:layout_height="106dp"
            android:id="@+id/buttonPlay"
            android:background="@drawable/blanca"
            android:onClick="bottonPlay"
            android:textSize="28sp"
            android:textAllCaps="false"
            android:paddingTop="42dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="60dp" />

        <Button
            android:layout_width="122dp"
            android:layout_height="106dp"
            android:id="@+id/buttonR"
            android:background="@drawable/botonnubemorada"
            android:onClick="changePageRight"
            android:textSize="28sp"
            android:textAllCaps="false"
            android:paddingTop="42dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="60dp"
            android:layout_gravity="top" />

    </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearLayout"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="5dp"
            android:columnCount="4"
            android:rowCount="3">

            <TextView
                android:layout_columnSpan="2"
                android:layout_width="340dp"
                android:layout_height="155dp"
                android:textSize="20dp"
                android:text="¡No hay nada imposible\n\t\t\tpara mi!"
                android:paddingLeft="72dp"
                android:layout_column="1"
                android:id="@+id/textView"
                android:paddingTop="70dp" />
            <ImageView
                android:layout_height="400dp"
                android:layout_width="195dp"
                android:layout_columnSpan="1"
                android:layout_rowSpan="2"
                android:layout_marginTop="25dp"
                android:id="@+id/imageView"
                android:layout_gravity="top|bottom" />

            <TextView
                android:layout_marginTop="120dp"
                android:layout_height="360dp"
                android:layout_width="match_parent"
                android:layout_gravity="left"
                android:text="Nombre: Núria\nEdad: 10 años\nColor favorito: Azul\nAnimal favorito: Pantera\nComida favorita: Lasaña\nHobby: Básquet y senderismo\nÍdolo: Mujer Maravilla\nLe encanta pintar\nAntes de irse a dormir lee cómics de Mortadelo y Filemón\nNo soporta los payasos\nSu sueño es llegar a ser una gran política y cambiar cosas"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:layout_row="1"
                android:layout_rowSpan="2"
                android:textSize="22sp"
                android:id="@+id/textView2"/>

        </GridLayout>

</RelativeLayout>
