<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".joc.Vista.activities.seleccioPersonatgeActivity"
    android:background="@drawable/fonsbo">

    <ImageView
        android:layout_width="115dp"
        android:layout_height="86dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="109dp" />

    <TextView
        android:layout_width="115dp"
        android:layout_height="86dp"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_above="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="96dp"
            android:layout_height="80dp"
            android:layout_below="@+id/textView"
            android:id="@+id/buttonL"
            android:background="@drawable/botonnubemorada"
            android:onClick="changePageLeft"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:paddingTop="32dp"
            android:paddingRight="10dp" />

        <Button
            android:layout_width="96dp"
            android:layout_height="80dp"
            android:id="@+id/buttonPlay"
            android:background="@drawable/blanca"
            android:onClick="bottonPlay"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:paddingTop="32dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="20dp" />

        <Button
            android:layout_width="96dp"
            android:layout_height="80dp"
            android:id="@+id/buttonR"
            android:background="@drawable/botonnubemorada"
            android:onClick="changePageRight"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:paddingTop="32dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="20dp" />

    </LinearLayout>

</RelativeLayout>
